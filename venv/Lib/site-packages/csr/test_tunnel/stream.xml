<!--
  Stream constant definitions.

  CONFIDENTIAL

  DESCRIPTION

    Stream definitions needed by OBPM and/or other external tools & components in
    communications with Kymera. Also utilised by Stream Kymera component itself.

  NOTES

-->
<definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation=".\hip.xsd">
  <resource name="FILE" />
  <resource name="CONST" />
  <resource name="TYPE" />
  <resource name="PRIMITIVE" />
  <resource name="HEADER" />
  <type name="CoreTypesXml" resource="FILE" file="core_types.xml" />

  <type name="STREAM_EP_CONSTS" resource="CONST" size="16">
  <!-- Definitions for the three MSBs of an endpoint id. These bits are used to encode the endpoint type. -->
    <value name="STREAM_EP_SINK_BIT"  value="0x8000"></value>
    <value name="STREAM_EP_OP_BIT"    value="0x4000"></value>
    <value name="STREAM_EP_EP_BIT"    value="0x2000"></value>
    <value name="STREAM_EP_TYPE_MASK" value="STREAM_EP_SINK_BIT | STREAM_EP_OP_BIT | STREAM_EP_EP_BIT"></value>
    <value name="STREAM_EP_SHADOW_MASK" value="STREAM_EP_OP_BIT | STREAM_EP_EP_BIT"></value>

  <!-- Stream definitions for the various types of endpoints formed from combinations of the three MSBs of an endpoint id. -->
    <value name="STREAM_EP_EXT_SOURCE" value="STREAM_EP_EP_BIT"></value>
    <value name="STREAM_EP_EXT_SINK"   value="STREAM_EP_EP_BIT | STREAM_EP_SINK_BIT"></value>
    <value name="STREAM_EP_OP_SOURCE"  value="STREAM_EP_EP_BIT | STREAM_EP_OP_BIT"></value>
    <value name="STREAM_EP_OP_SINK" value="STREAM_EP_EP_BIT | STREAM_EP_OP_BIT | STREAM_EP_SINK_BIT"></value>

  <!-- Definitions for the thirteen LSBs of an external endpoint id -->
    <value name="STREAM_EP_EXT_ID_MASK" value="0x1fff"></value>
    <value name="STREAM_EP_EXT_ID_POSN" value="0"></value>

  <!-- Definitions for the thirteen LSBs of an operator endpoint id -->
    <value name="STREAM_EP_OPID_MASK"  value="0x1fc0"></value>
    <value name="STREAM_EP_OPID_POSN"  value="6"></value>
    <value name="STREAM_EP_CHAN_MASK"  value="0x003f"></value>
    <value name="STREAM_EP_CHAN_POSN"  value="0"></value>

   <!-- Definitions for Shadow endpoint types -->
    <value name="STREAM_EP_SHADOW_TYPE_MASK" value="STREAM_EP_OP_BIT | STREAM_EP_EP_BIT"></value>
    <value name="STREAM_EP_SHADOW_ID_MASK"   value="0x9fff"></value>

  </type>


  <type name="STREAM_DEVICE" resource="TYPE" size="16">
  <!-- Stream device type IDs. These are common across BC and Hydra platforms.
  These are also defined in //depot/bc/main/interface/app/stream/stream_if.h
  ("stream_device") and need to remain aligned. If you need to allocate a new
  number, check there first as well as here, as someone may have allocated a
  new number there without updating this file.
  (We also have another copy of a subset of this information in
  common/hydra/interface/accmd_types.xml) -->
    <value name="PCM" value="0x0001"></value>
    <value name="I2S" value="0x0002"></value>
    <value name="CODEC" value="0x0003"></value>
    <!-- FM = 0x0004 on BlueCore -->
    <value name="SPDIF" value="0x0005"></value>
    <value name="DIGITAL_MIC" value="0x0006"></value>
    <value name="SHUNT" value="0x0007"></value>
    <!-- FASTPIPE = 0x0008 on BlueCore -->
    <value name="SCO" value="0x0009"></value>
    <value name="FILE" value="0x000A"></value>
    <value name="APPDATA" value="0x000B"></value>
    <value name="L2CAP" value="0x000C"></value>
    <!-- I2C = 0x000D on BlueCore -->
    <value name="USB_ENDPOINT" value="0x000E"></value>
    <value name="CAP_DOWNLOAD" value="0x000F"></value>
    <value name="PWM" value="0x0010"></value>
    <value name="TIMESTAMPED" value="0x0011"></value>
    <value name="FILE_MANAGER" value="0x0012"></value>
    <value name="ISO" value="0x0013"></value>
    <value name="OPERATOR" value="0x001E"></value>
   <value name="SIMULATION_FILE" value="0x007D"></value>
    <value name="TESTER" value="0x007E">
        <!-- Endpoint that provides mechanisms to test the audio data service. -->
    </value>
    <value name="RAW_BUFFER" value="0x007F">
        <!-- Endpoint that provides a raw buffer without flow control/kicks.
             If this endpoint is connected to a PCM interface, the data in
             in the buffer will be looped around and played out. -->
    </value>
  </type>

  <type name="STREAM_ANC_PATH" resource="TYPE" size="16">
    <!-- Identify the input of a filter from a specific ANC block. -->
    <value name="NONE_ID" value="0x0000">
    </value>
    <value name="FFA_ID" value="0x0001">
        <!-- Feed Forward Filter, this input is typically connected
             to a microphone placed outside of the headset. -->
    </value>
    <value name="FFB_ID" value="0x0002">
        <!-- Feed Forward Filter, this input is typically connected
             to a microphone placed inside of the headset. -->
    </value>
    <value name="FB_ID" value="0x0003">
        <!-- Feedback Filter, the input for this filter is hardwired. -->
    </value>
    <value name="SM_LPF_ID" value="0x0004">
        <!-- Small Low Pass Filter used by other paths. -->
    </value>
  </type>

  <type name="STREAM_ANC_BANK" resource="TYPE" size="16">
    <!-- Each ANC block has 2 banks of coefficients for the IIR filters.
         They can be used in 2 ways. Either one bank is used for
         configuration and operation or one bank is used for configuration
         and one bank is used for configuration. The latter case allows
         updating the coefficients atomically. -->
    <value name="FOREGROUND" value="0x0000">
        <!-- When only one bank is used, then it is this bank.
             When 2 banks are used, this is the configuration bank. -->
    </value>
    <value name="BACKGROUND" value="0x0001">
        <!-- When 2 banks are used, this is the operation bank. -->
    </value>
  </type>
</definitions>
